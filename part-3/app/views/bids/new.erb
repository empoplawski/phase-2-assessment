  <p>Place a bid on this item!</p>

  <% if @errors %>
  <% @errors.each do |error| %>
    <ul class="error" style="list-style: none;">
      <li class="error"><%= error %></li>
    </ul>
  <% end %>
<% end %>

  <form method="POST" action="/bids">
  
  $ <input type="text" name="bid[amount]">
    <input type="hidden" name="bid[bid_date]" value="<%= DateTime.now %>">
    <input type="hidden" name="bid[user_id]" value="<%=current_user.id%>">
    <input type="hidden" name="bid[item_id]" value="<%=item.id%>">

    <input type="submit" value="place bid">
  </form>