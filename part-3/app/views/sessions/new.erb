<h3>Login</h3>

<% if @user.errors.any? %>
<%= erb :"_errors", locals: {errors: @user.errors} %>
<% end %>


<form method="POST" action="/sessions">
  <input type="text" name="username" placeholder="Username">
  <input type="password" name="password" placeholder="Password">
  <input type="submit">
</form>